{
  "name": "@topolop/graph-core",
  "version": "0.1.0",
  "description": "Database-agnostic graph storage abstraction layer with Neo4j and SQLite backends",
  "private": false,
  "publishConfig": {
    "access": "restricted",
    "registry": "http://localhost:4873"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "test:unit": "jest tests/unit/",
    "test:integration": "jest tests/integration/",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --coverage --maxWorkers=2 --ci",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --ext .js,.ts",
    "validate": "npm run typecheck && npm run lint && npm run test:unit",
    "ci": "npm run validate && npm run test:ci",
    "clean": "rm -rf dist"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/jest": "^30.0.0",
    "@types/node": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^8.44.1",
    "@typescript-eslint/parser": "^8.44.1",
    "better-sqlite3": "^12.4.1",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "neo4j-driver": "^6.0.0",
    "prettier": "^3.0.0",
    "ts-jest": "^29.4.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  },
  "peerDependencies": {
    "better-sqlite3": "^9.0.0",
    "neo4j-driver": "^5.14.0"
  },
  "peerDependenciesMeta": {
    "neo4j-driver": {
      "optional": true
    },
    "better-sqlite3": {
      "optional": true
    }
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/cordlesssteve/topolop.git"
  },
  "license": "MIT",
  "author": "cordlesssteve",
  "keywords": [
    "graph",
    "database",
    "neo4j",
    "sqlite",
    "abstraction",
    "topolop"
  ]
}
